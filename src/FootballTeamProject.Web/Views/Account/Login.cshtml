@model FootballTeamProject.Web.ViewModels.LoginUserViewModel

@{
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
    ViewData["Title"] = "Login";
}


<div class="row">

    <form asp-action="Login" method="post">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">

            <input asp-for="Email" class="form-control" name="email" type="email" placeholder="Email" />
            <label asp-for="Email">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class=" form-floating">

            <input asp-for="Password" class="form-control" name="password" type="password" placeholder="Password" />
            <label asp-for="Password">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class=" form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
            </label>
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="w-100 btn btn-lg btn-primary" />
        </div>
    </form>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
