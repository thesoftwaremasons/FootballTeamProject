@model FootballTeamProject.Web.ViewModels.RegisterUserViewModel

@{
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
    ViewData["Title"] = "Register";
}

<h1>Register Your Club</h1>

<div class="row">
    <form asp-action="Register" method="Post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">

            <input asp-for="FirstName" class="form-control" name="firstname" type="text" placeholder="First Name" />
            <label asp-for="FirstName">First Name</label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            
            <input asp-for="LastName" class="form-control" name="lastname" type="text" placeholder="Last Name" />
            <label asp-for="LastName">Last Name</label>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-floating">

            <input asp-for="ClubName" class="form-control" name="clubname" type="text" placeholder="Club Name" />
            <label asp-for="ClubName">Club Name</label>
            <span asp-validation-for="ClubName" class="text-danger"></span>
        </div>
        <div class="form-floating">

            <input asp-for="Email" class="form-control" name="email" type="email" placeholder="Email" />
            <label asp-for="Email">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating">

            <input asp-for="Password" class="form-control" name="password" type="password" placeholder="Password" />
            <label asp-for="Password">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-floating" style="top:-10px">
            <input asp-for="ConfirmPassword" class="form-control" type="password" name="confirmpassword" placeholder="Confirm Password" />
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Register" class="w-100 btn btn-lg btn-primary" />
        </div>
    </form>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
